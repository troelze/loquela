{{> navbar}}
<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Welcome back {{username}}!</h1>
        <p class="lead text-muted">You are currently practicing {{language}}</p>
        <br>
        {{#if topicTotal}}
            <p class="lead text-muted">You are currently studying the {{topic}} topic</p>
            <p class="lead text-muted">You have completed {{topicCount}} out of {{topicTotal}} prompts for the {{topic}} topic</p>
            <p>
                <a href="/prompts/{{continue}}" class="btn btn-primary my-2">Continue</a>
            </p>
        {{else}}
            <p class="lead text-muted">You have completed all prompts for the {{topic}} topic!</p>
            <p class="lead text-muted">Please change your topic to keep your learning going with other prompts!</p>
            <p>
                <a href="/profile/edit" class="btn btn-primary my-2">Change Topic</a>
            </p>
        {{/if}}
    </div>
</section>
